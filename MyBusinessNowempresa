function updateEstoqueList() {
 const container = document.getElementById('estoque-list');
 
Inicialize o estoque array se ele n√£o existir
 if (!businessData.estoque) {
 businessData.estoque = [];
 }
 
if (businessData.estoque.length === 0) {
